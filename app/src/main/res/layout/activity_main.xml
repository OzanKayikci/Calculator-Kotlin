<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@color/darkBackground"
    android:backgroundTint="@color/darkBackground"
    android:foregroundGravity="bottom"
    android:gravity="bottom"
    android:orientation="vertical"
    app:layout_anchorGravity="bottom"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/conculationText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="@color/darkBackground"
        android:ems="10"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:focusedByDefault="false"
        android:foregroundGravity="bottom"
        android:gravity="bottom|right"
        android:inputType="textPersonName"
        android:paddingRight="20dp"
        android:text="0"
        android:textColor="#ECE7E7"
        android:textColorHint="#FFFFFF"
        android:textIsSelectable="true"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/operationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:textColor="#6C6E6D"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/conculationView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center|right"
        android:paddingEnd="20dp"
        android:textColor="#8E8F8F"
        android:textSize="24sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkBackground"
        android:backgroundTint="@color/darkBackground"
        android:gravity="bottom">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darkBackground"
            android:backgroundTint="@color/darkBackground"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:forceHasOverlappingRendering="false"
                android:foregroundTint="#0FFFFFFF"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonAC"
                    android:layout_width="90dp"
                    android:layout_height="90dp"

                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/sienna"
                    android:onClick="btnFunction"
                    android:text="AC"
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />

                <Button
                    android:id="@+id/buttonDel"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/green"
                    android:onClick="btnFunction"
                    android:text="&#x279C;"
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />

                <Button
                    android:id="@+id/buttonSign"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/green"
                    android:onClick="btnFunction"
                    android:text="-/+"
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />

                <Button
                    android:id="@+id/buttonD"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/green"
                    android:onClick="btnFunction"
                    android:text="/"
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/darkBackground"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:onClick="btnNumberClick"
                    android:text="7"
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:onClick="btnNumberClick"
                    android:text="8"
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:onClick="btnNumberClick"
                    android:text="9"
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />

                <Button
                    android:id="@+id/buttonX"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/green"
                    android:onClick="btnFunction"
                    android:text="X"
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:onClick="btnNumberClick"
                    android:text="4"
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:onClick="btnNumberClick"
                    android:text="5"
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:onClick="btnNumberClick"
                    android:text="6"
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />

                <Button
                    android:id="@+id/buttonM"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/green"
                    android:onClick="btnFunction"
                    android:text="-"
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:onClick="btnNumberClick"
                    android:text="1"
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />/>

                <Button
                    android:id="@+id/button2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:onClick="btnNumberClick"
                    android:text="2"
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />/>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:onClick="btnNumberClick"
                    android:text="3"
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />/>

                <Button
                    android:id="@+id/buttonP"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/green"
                    android:onClick="btnFunction"
                    android:text="+"
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />/>
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/darkBackground"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button0"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:onClick="btnNumberClick"
                    android:text="0"
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />/>

                <Button
                    android:id="@+id/buttonC"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:onClick="btnNumberClick"
                    android:text=","
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />/>

                <Button
                    android:id="@+id/buttonDot"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="."
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />/>

                <Button
                    android:id="@+id/buttonE"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/sandBrown"
                    android:onClick="btnFunction"
                    android:text="="
                    android:textSize="22sp"
                    app:rippleColor="@color/dark" />/>
            </LinearLayout>

        </TableRow>

    </TableLayout>

</LinearLayout>